<hr class="separator-related"/>

<div class="container">
	<div class="row justify-content-center mt-5 mb-4">
		<div class="col-sm-12">
			<p class="related-top"><%= "More election coverage" %></p>
		</div>
	</div>
	<div class="row">
		<% text.forEach(function(d,i){%>
			<%if (d.policy){%>
				<div class="col-md-3 col-sm-6 col-6">
					<div class="related-img-container">
                        <a href="<%= d.link %>" target="_blank"><img src="<%= d.image %>" class="img-fluid"></a>
                    </div>
					<p class="related-hed"><a href="<%= d.link %>" target="_blank"><%= d.headline %></a></p>
					<p class ="related-date"><%= d.pubdate %></p>
				</div>
			<%}%>
		<%})%>
	</div>
</div>